# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file.
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

# Tab indentation for Make targets.
[Makefile]
indent_style = tab
